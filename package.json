{
    "name": "dannyguo.com",
    "version": "1.0.0",
    "repository": "https://github.com/dguo/dannyguo.com",
    "author": "Danny Guo",
    "private": true,
    "scripts": {
        "dev": "astro dev",
        "start": "astro dev",
        "build": "astro build",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "preview": "astro preview",
        "lint": "yarn lint:css && yarn lint:src",
        "lint:css": "stylelint public/css/*",
        "lint:src": "eslint src",
        "update-search-index": "atomic-algolia"
    },
    "dependencies": {
        "@astrojs/mdx": "0.12.0",
        "@astrojs/rss": "2.0.0",
        "@astrojs/sitemap": "1.0.0",
        "@fontsource/open-sans": "4.5.13",
        "@fontsource/source-code-pro": "4.5.12",
        "@fontsource/source-serif-pro": "4.5.9",
        "algoliasearch": "4.14.3",
        "astro": "1.8.0",
        "hastscript": "7.1.0",
        "instantsearch.css": "7.4.5",
        "instantsearch.js": "4.49.2",
        "mdast-util-to-string": "3.1.0",
        "reading-time": "1.5.0",
        "rehype-autolink-headings": "6.1.1",
        "rehype-slug": "5.1.0"
    },
    "devDependencies": {
        "@typescript-eslint/parser": "5.47.1",
        "atomic-algolia": "0.3.19",
        "eslint": "8.31.0",
        "eslint-plugin-astro": "0.21.1",
        "prettier": "2.8.1",
        "prettier-plugin-astro": "0.7.0",
        "stylelint": "14.16.1",
        "stylelint-config-recommended": "9.0.0"
    },
    "eslintConfig": {
        "extends": "plugin:astro/recommended",
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "overrides": [
            {
                "files": [
                    "*.astro"
                ],
                "parser": "astro-eslint-parser",
                "parserOptions": {
                    "parser": "@typescript-eslint/parser",
                    "extraFileExtensions": [
                        ".astro"
                    ]
                }
            }
        ]
    },
    "stylelint": {
        "extends": "stylelint-config-recommended"
    },
    "packageManager": "yarn@3.2.2"
}

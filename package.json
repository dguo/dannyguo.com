{
    "name": "dannyguo.com",
    "version": "1.0.0",
    "repository": "https://github.com/dguo/dannyguo.com",
    "author": "Danny Guo",
    "private": true,
    "scripts": {
        "dev": "astro dev",
        "start": "astro dev",
        "build": "astro build",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "preview": "astro preview",
        "lint": "yarn lint:css && yarn lint:html && yarn lint:js && yarn lint:md",
        "lint:css": "stylelint public/css/*",
        "lint:js": "eslint static/js/*",
        "lint:md": "markdownlint content/**/*/*.md",
        "update-search-index": "atomic-algolia"
    },
    "dependencies": {
        "@astrojs/mdx": "0.11.5",
        "@astrojs/rss": "1.0.3",
        "@fontsource/open-sans": "4.5.13",
        "@fontsource/source-code-pro": "4.5.12",
        "@fontsource/source-serif-pro": "4.5.9",
        "algoliasearch": "4.14.2",
        "astro": "1.6.1",
        "instantsearch.css": "7.4.5",
        "instantsearch.js": "4.48.1",
        "mdast-util-to-string": "3.1.0",
        "reading-time": "1.5.0"
    },
    "devDependencies": {
        "@astrojs/sitemap": "1.0.0",
        "atomic-algolia": "0.3.19",
        "eslint": "8.26.0",
        "markdownlint-cli": "0.32.2",
        "prettier": "2.7.1",
        "prettier-plugin-astro": "0.7.0",
        "stylelint": "14.14.0",
        "stylelint-config-recommended": "9.0.0"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "browser": true
        },
        "languageOptions": {
            "sourceType": "module"
        }
    },
    "stylelint": {
        "extends": "stylelint-config-recommended"
    },
    "packageManager": "yarn@3.2.2"
}

{
    "name": "dannyguo.com",
    "version": "1.0.0",
    "repository": "https://github.com/dguo/dguo.github.io",
    "author": "Danny Guo",
    "private": true,
    "scripts": {
        "format:watch": "onchange 'public/**/*.html' -- prettier --write {{changed}}",
        "lint": "yarn lint:css && yarn lint:html && yarn lint:js && yarn lint:md",
        "lint:css": "stylelint static/css/*",
        "lint:html": "htmlhint public/**/*/*.html",
        "lint:js": "eslint static/js/*",
        "lint:md": "markdownlint content/**/*/*.md",
        "start": "yarn format:watch & hugo server --bind 0.0.0.0 --buildDrafts --cleanDestinationDir --renderToDisk",
        "update-search-index": "atomic-algolia"
    },
    "devDependencies": {
        "atomic-algolia": "^0.3.17",
        "eslint": "^5.11.0",
        "htmlhint": "^0.10.1",
        "markdownlint-cli": "^0.13.0",
        "onchange": "^5.2.0",
        "prettier": "^1.15.3",
        "stylelint": "^9.9.0",
        "stylelint-config-recommended": "^2.1.0"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "browser": true
        }
    },
    "stylelint": {
        "extends": "stylelint-config-recommended"
    }
}

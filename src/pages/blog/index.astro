---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getBlogPostList } from "./_utils";

const posts: any[] = getBlogPostList({
    includeDraft: import.meta.env.DEV,
    includeUnlisted: import.meta.env.DEV,
});
---

<BaseLayout>
    <h1>Blog</h1>
    <p>
        You can <a href="/newsletter">subscribe</a> to my newsletter for future posts.
    </p>

    {
        posts.map((post) => (
            <p>
                <em>{post.frontmatter.date || "Draft"}</em>
                &middot;
                <a href={post.url}>{post.frontmatter.title}</a>
            </p>
        ))
    }
</BaseLayout>
